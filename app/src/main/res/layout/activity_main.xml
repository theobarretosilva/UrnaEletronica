<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FFDB"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/cpfEleitor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="123.456.789-10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:backgroundTint="#38A3A5"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sistema de votação"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/numeroCandidato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Número do seu candidato"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:backgroundTint="#38A3A5"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpfEleitor" />

    <ImageView
        android:id="@+id/imgCandidato"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numeroCandidato"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nomeCandidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nome do candidato"
        android:textColor="#22577A"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCandidato" />

    <Button
        android:id="@+id/verifica"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Verifica"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:onClick="verifica"
        app:backgroundTint="#009688"
        app:cornerRadius="12dp"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cargoCandidato" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:onClick="confirma"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Confirma"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:cornerRadius="12dp"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifica" />

    <TextView
        android:id="@+id/nCandidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="Número do candidato"
        android:textSize="21sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeCandidato" />

    <TextView
        android:id="@+id/cargoCandidato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:hint="Cargo do candidato"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#000000"
        app:fontFamily="@font/arbutus_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nCandidato" />
</androidx.constraintlayout.widget.ConstraintLayout>